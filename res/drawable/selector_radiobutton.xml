<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <shape>
            <solid 
                android:color="#21b8ce" />

            <padding 
                android:bottom="10dp" 
                android:left="5dp" 
                android:right="5dp" 
                android:top="10dp" />

            <stroke 
                android:color="#21b8ce" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <corners
                android:radius="5dp"
                />
            
            <solid 
                android:color="#cc22cde6" />

            <padding 
                android:bottom="10dp" 
                android:left="5dp" 
                android:right="5dp" 
                android:top="10dp" />

            <stroke 
                android:color="#cc22cde6" />
        </shape>
    </item>

</selector>